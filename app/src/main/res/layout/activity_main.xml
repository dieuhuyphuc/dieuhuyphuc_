<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/black">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter feedback detials to send to the developer:"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_margin="1dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Anne Droid"
        android:background="@color/white"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:id="@+id/edName"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="anne@droid.com"
        android:background="@color/white"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:id="@+id/edEmail"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:id="@+id/spinner"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/white"
        android:layout_margin="10dp"
        android:gravity="top"
        android:hint="This is the most boring applocation ever. If you don't spice it up soon , I am going give you a bad rating! I accept bribes ... "
        android:textSize="30dp"
        android:textStyle="bold"
        android:id="@+id/edtext"/>

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:text="Would you like an email reponse"
        android:textStyle="bold"
        android:id="@+id/cb"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Send Feedback"
        android:background="@color/design_default_color_primary_variant"
        android:id="@+id/btSend"/>






</LinearLayout>